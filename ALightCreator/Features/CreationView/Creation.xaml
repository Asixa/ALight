                                <Button  Height="60" Margin="4,2,4,2"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Controls" Width="80" Padding="10 8">
            <TabItem.Resources>
                <Style x:Key="ExampleGroupBoxStyle" TargetType="{x:Type GroupBox}" BasedOn="{StaticResource GrayGroupBox}">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="Margin" Value="0 10 0 10"/>
                </Style>
            </TabItem.Resources>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <StackPanel>
                        <GroupBox Header="基本" Style="{StaticResource ExampleGroupBoxStyle}">
