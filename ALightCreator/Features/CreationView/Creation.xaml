                </Style>
            </TabItem.Resources>
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <Grid>
                    <StackPanel>
                        <GroupBox Header="基本" Style="{StaticResource ExampleGroupBoxStyle}">
                            <StackPanel>
                                <Button  Height="60" Margin="4,2,4,2"/>
